{
  "name": "",
  "version": "0.0.0",
  "description": "Implementation of AbortController interface",
  "engines": {
    "node": ">=15",
    "pnpm": "^7.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NikolayMakhonin/abort-controller.git"
  },
  "author": "NikolayMakhonin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NikolayMakhonin/abort-controller/issues"
  },
  "homepage": "https://github.com/NikolayMakhonin/abort-controller#readme",
  "scripts": {
    "pre-publish": "pnpm run lint && pnpm run build && pnpm run test:mocha:ci && pnpm run test:karma",
    "publish:original": "npm publish --cwd packages/abort-controller",
    "publish:fast": "npm publish --cwd packages/abort-controller-fast",
    "publish": "pnpm run pre-publish && npm run publish:original && npm run publish:fast",
    "prepublishOnly": "!! DON'T PUBLIH IT !!",
    "lint": "eslint \"./src/**/*.{ts,js,cjs,mjs}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,js,cjs,mjs}\"",
    "build:js": "rollup -c && cpy \"**/assets/**\" \"../dist/\" --parents --cwd=src",
    "build:types": "tsc --outDir dist/node --declaration",
    "build": "rimraf dist packages/**/dist && pnpm run build:js && pnpm run build:types && cpy dist/node/abort-controller/fast/** !**/test/** !**/*.{test,perf}.* packages/abort-controller-fast/dist/node && cpy dist/node/abort-controller/original/** !**/test/** !**/*.{test,perf}.* packages/abort-controller/dist/node",
    "coverage:merge": "rimraf tmp/coverage/{all,merge} && cp-flat \"tmp/coverage/*/json/**/*.json\" \"tmp/coverage/merge\" && nyc report -r lcov --report-dir tmp/coverage/all/lcov --temp-dir \"tmp/coverage/merge/\"",
    "coverage:check": "pnpm run coverage:merge && nyc check-coverage --report-dir tmp/coverage/all/lcov --lines 50 --functions 50 --branches 50 --statements 50",
    "test:mocha": "mocha ./src/**/*.test.ts",
    "test:mocha:coverage": "rimraf tmp/coverage/mocha && nyc --all mocha ./src/**/*.test.ts",
    "test:mocha:watch": "mocha --watch ./src/**/*.test.ts",
    "test:karma": "rimraf tmp/coverage/karma && karma start --single-run --log-level debug",
    "test:mocha:ci": "rimraf tmp/coverage/mocha && nyc --all mocha ./src/**/*.test.ts ./dist/**/*.test.cjs",
    "coveralls": "pnpm run coverage:check && nyc report --reporter=text-lcov --temp-dir \"tmp/coverage/merge/\" | coveralls"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-classes": "^7.17.12",
    "@babel/plugin-transform-runtime": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/runtime-corejs3": "^7.18.0",
    "@flemist/copy-glob-flat": "^0.0.5",
    "@flemist/karma-custom-launcher": "^0.0.0",
    "@flemist/test-variants": "0.0.0",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-multi-entry": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/assert": "^1.5.6",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.12.0",
    "eslint-config-pro": "^3.0.8",
    "fs-extra": "^10.0.1",
    "globby": "^11.1.0",
    "karma": "^6.3.20",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-safari-launcher": "^1.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "rdtsc": "^2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-istanbul": "^3.0.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  }
}
